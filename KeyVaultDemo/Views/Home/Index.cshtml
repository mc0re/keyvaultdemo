@{
    ViewData["Title"] = "Home Page";
}

@if (! string.IsNullOrEmpty(ViewBag.Error))
{
    <p class="text-danger">@ViewBag.Error</p>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Color via read</h1>
        <p>@ViewBag.Color</p>

        <h1 class="display-4">Name via config</h1>
        <p>@ViewBag.Name</p>
    </div>
}
